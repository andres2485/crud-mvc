
@model demo_crud.Models.Usuario

<h3 style="text-align:center">Nuevo Usuario</h3>

<hr />

<!--Html.ValidationSummary()  me muestra los required en una lista--> 

<div class="container" style="margin-left:20em">

    <form method="post" action="@Url.Action("Nuevo","Usuarios")">


        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Nombre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Nombre">
            </div>
            @Html.ValidationMessageFor(model => model.Nombre)

        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Apellido</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Apellido">
            </div>
            @Html.ValidationMessageFor(model => model.Apellido)
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Edad</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="Edad">
            </div>
            @Html.ValidationMessageFor(model => model.Edad)
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Direccion</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Direccion">
            </div>
            @Html.ValidationMessageFor(model => model.Direccion)
        </div>


        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Telefono</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="Telefono">
            </div>
            @Html.ValidationMessageFor(model => model.Telefono)
        </div>


        <div class="form-group row">
            <div class="col-sm-10" style="margin-left:15em">
                <button type="submit" class="btn btn-primary">Aceptar</button>
                <button type="button" class="btn btn-danger">Limpiar</button>
            </div>
        </div>
    </form>

</div>