@model demo_crud.Models.Usuario

editar usuario con id <strong> @ViewBag.id </strong>




<h3 style="text-align:center">Editar Usuario</h3>

<hr />

<div class="container" style="margin-left:20em">

    <form>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Nombre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.Nombre">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Apellido</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.Apellido">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Edad</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" value="@Model.Edad">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Direccion</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.Direccion">
            </div>
        </div>


        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Telefono</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" value="@Model.Telefono">
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-10" style="margin-left:15em">
                <button type="submit" class="btn btn-primary">Actualizar</button>
                <button type="button" class="btn btn-danger">Limpiar</button>
            </div>
        </div>
    </form>

</div>